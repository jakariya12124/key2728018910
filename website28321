    align-items: center;
    color: #00ffd5;
  }

  .container {
    background: rgba(0, 0, 0, 0.3);
    border: 2px solid #00ffd5;
    border-radius: 15px;
    box-shadow:
      0 0 15px #00ffd5,
      inset 0 0 20px #00ffd5;
    padding: 30px 50px;
    text-align: center;
    width: 320px;
  }

  h1 {
    margin-bottom: 20px;
    font-weight: 500;
    font-size: 1.8rem;
    text-shadow: 0 0 10px #00ffd5;
  }

  .key-box {
    background: #011f26;
    border-radius: 10px;
    padding: 15px 20px;
    margin-bottom: 25px;
    font-size: 1.8rem;
    letter-spacing: 6px;
    color: #00ffd5;
    user-select: all;
    box-shadow: inset 0 0 15px #00ffd5;
    cursor: text;
  }

  button {
    background: linear-gradient(90deg, #00ffd5, #005f6a);
    border: none;
    border-radius: 50px;
